<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.example.gifsearcher.models.GiphyData"/>
    </data>

    <com.felipecsl.gifimageview.library.GifImageView
        android:id="@+id/image"
        imageResource="@{item.images.fixedHeightGif.url}"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_fixed_height"
        android:minWidth="@dimen/image_min_width"
        android:maxWidth="@dimen/image_max_width"
        android:adjustViewBounds="true" />
</layout>